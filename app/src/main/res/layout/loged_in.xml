<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_colormix"
    android:padding="7dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30pt">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/SwipBtn"
            android:background="@drawable/ic_drawer"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="156dp"
            android:layout_height="47dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView5"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/bg_logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Slapyvardis"
            android:id="@+id/lblNick"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ff5a5a5a"
            android:textStyle="bold"/>

        <!-- Tekstas desineje puseje -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/asd"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <!-- Tekstas desineje puseje [Pabaiga] -->

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation = "vertical">

            <Button
                android:id = "@+id/apklausa1Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Apklausa"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="start_apk"> </Button>
            <Button
                android:id = "@+id/apklausa2Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Apklausa"
                android:textSize="25dp"
                android:textStyle="bold"> </Button>
            <Button
                android:id = "@+id/apklausa3Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Apklausa"
                android:textSize="25dp"
                android:textStyle="bold"> </Button>
            <Button
                android:id = "@+id/apklausa4Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Apklausa"
                android:textSize="25dp"
                android:textStyle="bold"> </Button>
            <Button
                android:id = "@+id/apklausa5Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Apklausa"
                android:textSize="25dp"
                android:textStyle="bold"> </Button>
            <Button
                android:id = "@+id/apklausa6Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Apklausa"
                android:textSize="25dp"
                android:textStyle="bold"> </Button>
        </LinearLayout>

    </ScrollView>

</LinearLayout>